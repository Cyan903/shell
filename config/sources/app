#
# Application specific scripts
#

# pnpm start
export PNPM_HOME="$XDG_DATA_HOME"

case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# Change directory using ranger
rangercd () {
    tmp="$(mktemp)"
    ranger --choosedir="$tmp" "$@"

    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
