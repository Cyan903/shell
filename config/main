#
# Source everything in /config/sources
# The order matters here!
#

export SHELL_DIRECTORY_CONFIG="$HOME"/.config/shell
export PATH=$PATH:$HOME/.local/bin

. "$SHELL_DIRECTORY_CONFIG"/config/sources/xdg
. "$SHELL_DIRECTORY_CONFIG"/config/sources/alias
. "$SHELL_DIRECTORY_CONFIG"/config/sources/tidy
. "$SHELL_DIRECTORY_CONFIG"/config/sources/app
